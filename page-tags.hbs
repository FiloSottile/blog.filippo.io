{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

        <header class="post-header">
            <a class="blog-logo" href="/">
                {{#if @site.logo}}
                <img src="{{@site.logo}}" alt="Blog Logo" />
                {{else}}
                <span class="blog-title">{{@site.title}}</span>
                {{/if}}
            </a>
        </header>

        {{#post}}

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}

            {{#foreach tags}}
            <h3>
                <a href="{{url}}" style="text-decoration: none;">{{name}}</a>
                <a class="icon-feed" style="text-decoration: none; font-size: 16px;" href="{{url}}/rss/"></a>
            </h3>
            <p>{{description}}</p>
            {{/foreach}}
        </section>

        {{/post}}

    </article>

</main>
