{{!< default}}

<style>
main { counter-reset: issue {{#get "posts"}}{{pagination.total}}{{/get}}; }
</style>

<header><a href="https://filippo.io">
    Filippo Valsorda
</a></header>

<main class="index">
    {{#foreach posts}}
    <article class="{{post_class}}">
        <span class="post-meta">
            <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
        </span>
        <h1 class="post-title"><a href="{{url}}">{{title}}</a></h1>
    </article>
    {{/foreach}}
</main>
